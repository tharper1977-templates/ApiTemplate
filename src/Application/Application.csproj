  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="10.0.0" />
  </ItemGroup>

  <ItemGroup Condition="'$(UseFluentValidation)' == 'true'">
    <PackageReference Include="FluentValidation" Version="11.9.0" />
  </ItemGroup>

</Project>
